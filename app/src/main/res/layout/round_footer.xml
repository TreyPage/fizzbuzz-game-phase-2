<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/roll_item_padding"
  android:orientation="horizontal"
  android:theme="@style/RoundHeader">

  <TextView
    android:layout_width="0dp"
    android:text="@string/total_shown"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_gravity="center"
    android:textAlignment="center"/>

  <TextView
    android:id="@+id/total_rounds"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_gravity="center"
    android:textAlignment="center"/>

  <TextView
    android:layout_weight="1"
    android:id="@+id/clock_display"
    style="@style/ClockDisplay"
    android:layout_width="0dp"
    android:layout_gravity="center"
    android:textAlignment="center"
    android:layout_height="wrap_content"
    />

  <TextView
    android:layout_width="0dp"
    android:text="@string/total_correct"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_gravity="center"
    android:textAlignment="center"/>

  <TextView
    android:id="@+id/total_correct"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_gravity="center"/>

</LinearLayout>